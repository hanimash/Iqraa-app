mixin navbar()
    .container
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
            a.navbar-brand(href='#') Iqraa App
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarContent', aria-controls='navbarContent', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarContent.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    li.nav-item.active
                        a.nav-link(href='#')
                            | Dashboard 
                    li.nav-item.dropdown
                        a#studentsDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                            i.fas.fa-user-graduate.mr-1
                            | Students
                        .dropdown-menu(aria-labelledby='studentsDropdown')
                            a.dropdown-item(href='../../student/list')
                                i.fas.fa-list.mr-1
                                |Students List
                            a.dropdown-item(href='../../student/add')
                                i.fas.fa-plus.mr-1
                                |Add new Students
                            a.dropdown-item(href='../../student/report')
                                i.fas.fa-money-check-alt.mr-1
                                |Financial report
                    li.nav-item.dropdown
                        a#TeachersDropdown.nav-link.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                            i.fas.fa-user-graduate.mr-1
                            | Teachers
                        .dropdown-menu(aria-labelledby='TeachersDropdown')
                            a.dropdown-item(href='../../teachers/report')
                                i.fas.fa-list.mr-1
                                |Teachers List
                            a.dropdown-item(href='../../teachers/report')
                                i.fas.fa-plus.mr-1
                                |Add new Teachers
                            a.dropdown-item(href='../../teachers/report')
                                i.fas.fa-money-check-alt.mr-1
                                |Financial report
                form.form-inline.my-2.my-lg-0
                    input.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search')
                    button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
